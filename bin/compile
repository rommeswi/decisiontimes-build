#!/bin/bash
INSTALL_PATH = "$1"
CACHE_PATH = "$2"
ENV_PATH = "$3"
# We need to export the random seed environment variable
export "RANDOM_SEED=$(cat $ENV_PATH/RANDOM_SEED)"

# Generate decision problems
GENERATE_SCRIPT="$INSTALL_PATH/generate_json.py"

python "$GENERATE_SCRIPT"

# Install remove-bg in the build cache
git clone https://github.com/remove-bg/homebrew-tap.git "$CACHE_PATH/homebrew-tap"

brew install "$CACHE_PATH/homebrew-tap/removebg"

# Generate images
IMAGE_SCRIPT="$INSTALL_PATH/image_script.py"
python "$IMAGE_SCRIPT"
